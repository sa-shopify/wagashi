{% style %}
  .ssPopupHeader{
    position: relative;
  }

  .ssPopupHeader__header{
    width: 100%;
    background: #F0F1ED;
    border-bottom-left-radius: 20px;
    position: absolute;
    top: -1px;
    left: 0;
    z-index:9999;
    height: 84px;
  }

  .ssPopupHeader__innner{
    padding: 20px 15px 20px 20px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: horizontal;
    -webkit-box-direction: normal;
        -ms-flex-direction: row;
            flex-direction: row;
    -webkit-box-pack: justify;
        -ms-flex-pack: justify;
            justify-content: space-between;
    height: inherit;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
  }

  .ssPopupHeader__spMenubox{
    display: block;
    padding:0;
    margin:0;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100vh;
    background: #779547;
    opacity: 0;
    -webkit-transition: opacity .5s, visibility .5s;
    -o-transition: opacity .5s, visibility .5s;
    transition: opacity .5s, visibility .5s; ;
    visibility: hidden;
  }

  .ssPopupHeader__spMenubox.is-active {
    opacity: 1;
    visibility: visible;
    position: fixed;
  }

  .ssPopupHeader__spMenus{
    padding:0;
    margin:0;
    position: absolute;
    top: 0;
    left: 0;
    padding-top: 140px;
    z-index: 10;
    width: 100%;
  }

  .ssPopupHeader__spMenuBottomImage{
    padding:0;
    margin:0;
    position: absolute;
    bottom: 0;
    right: 0;
    display: block;
    width: 55.466vw;
    height: auto;
    z-index: 20;
  }

  .ssPopupHeader__spMenu a{
    padding: 24px 20px;
    color: #FEFFFF;
    display: block;
    text-decoration: none;
    font-size: 18px;
    font-weight: 400;
    line-height: 116%;
  }

  .ssPopupHeader__logo{
    display: inline-block;
    width: 103px;
    height: 40px;
  }

  .ssPopupHeader__logo img{
    display: inline-block;
    width: 100%;
    height: 100%;
  }

  .ssPopupHeader__spMenuButton{
    width: 44px;
    height: 44px;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: center;
        -ms-flex-align: center;
            align-items: center;
    -webkit-box-pack: center;
        -ms-flex-pack: center;
            justify-content: center;
    position: relative;
    border: none;
  }

  .ssPopupHeader__spMenuButton span{
    background: #000000;
    position: absolute;
    top: 50%;
    left: 50%;
    width: 18.5px;
    height: 1px;
    -webkit-transform: translate(-50%, -50%);
        -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
    -webkit-transition: all .3s ease;
    -o-transition: all .3s ease;
    transition: all .3s ease;
  }

  .ssPopupHeader__spMenuButton span:nth-child(1){
    -webkit-transform: translate(-50%, -8px);
        -ms-transform: translate(-50%, -8px);
            transform: translate(-50%, -8px);
  }

  .ssPopupHeader__spMenuButton span:nth-child(3){
    -webkit-transform: translate(-50%, 7px);
        -ms-transform: translate(-50%, 7px);
            transform: translate(-50%, 7px);
  }

  .ssPopupHeader__spMenuButton.is-active span:nth-child(2) {
    opacity:0;
  }

  .ssPopupHeader__spMenuButton.is-active span:nth-child(1) {
    -webkit-transform: translate(-50%, -50%) rotate(225deg);
        -ms-transform: translate(-50%, -50%) rotate(225deg);
            transform: translate(-50%, -50%) rotate(225deg);
  }
  .ssPopupHeader__spMenuButton.is-active span:nth-child(3) {
    -webkit-transform: translate(-50%, -50%) rotate(-225deg);
        -ms-transform: translate(-50%, -50%) rotate(-225deg);
            transform: translate(-50%, -50%) rotate(-225deg);
  }

  .ssPopupHeader__pcMenubox{
    padding: 0;
    margin: 0;
    display: none;
  }

  .ssPopupHeader__menus{
    padding: 0;
    margin: 0;
    list-style: none;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
  }

  .ssPopupHeader__menu a{
    text-decoration: none;
    color: #020202;
  }

  .ssPopupHeader__menu a:hover{
    text-decoration: underline;
  }

  .ssPopupHeader__menu{
    padding: 0;
    margin: 0;
    padding: 12px;
    color: #020202;
    font-size: 14px;
    font-weight: 400;
    line-height: 150%; /* 21px */
    letter-spacing: 0.28px;
  }

  @media screen and (min-width: 750px) {
    .ssPopupHeader__header{
      height: 95px;
      border-bottom-left-radius: 40px;
    }

    .ssPopupHeader__innner{
      padding: 20px 50px;
    }

    .ssPopupHeader__spMenuButton{
      display: none;
    }

    .ssPopupHeader__spMenubox{
      display: none;
    }

    .ssPopupHeader__pcMenubox{
      display: inline;
    }

    .ssPopupHeader__menu{
      font-size: 14px;
    }

  }
{% endstyle %}


{% style %}
  .ssPopup{
    background: #779547;
  }
{% endstyle %}
  

<script>
  document.addEventListener('DOMContentLoaded', function(){
    const popBtn = document.getElementById('ssPopupHeader__spButton');
    const popMenu = document.getElementById('ssPopupHeader__spMenubox');
    popBtn.addEventListener('click', function(){
      if(!this.classList.contains('is-active')){
        this.classList.add('is-active');
        popMenu.classList.add('is-active');
      } else{
        this.classList.remove('is-active');
        popMenu.classList.remove('is-active');
      }
    })

    document.querySelectorAll('a[href^="#"]').forEach(
      anchor => {
        anchor.addEventListener('click', function(e){
          e.preventDefault();

          const href = anchor.getAttribute("href");
          const target = document.getElementById(href.replace("#", ""));
          const tartgetPosition = target.getBoundingClientRect().top + window.pageYOffset;

          window.scrollTo({
            top: tartgetPosition,
            behavior: 'smooth'
          });


        })
      }
    )
  })
</script>

<header class="ssPopupHeader">
  <div class="ssPopupHeader__header">
    <div class="ssPopupHeader__innner page-width">
      <div class="ssPopupHeader__logo">
        <a href="{{'/'}}">
          <img src="{{ section.settings.logo |  image_url: width:400   }}" alt="{{ section.settings.logo.alt }}">
        </a>
      </div>
        <button id="ssPopupHeader__spButton" class="ssPopupHeader__spMenuButton" aria-label="メインメニューを開く">
          <span></span>
          <span></span>
          <span></span>
        </button>
  
      <nav class="ssPopupHeader__pcMenubox">
        <ul class="ssPopupHeader__menus">
          {% for block in section.blocks %}
            <li class="ssPopupHeader__menu"><a href="#{{ block.settings.menu_id }}">{{ block.settings.menu_title }}</a></li>
          {% endfor %}
        </ul>
      </nav>
    </div>
  </div>
  <div id="ssPopupHeader__spMenubox" class="ssPopupHeader__spMenubox">
    <ul class="ssPopupHeader__spMenus">
      {% for block in section.blocks %}
        <li class="ssPopupHeader__spMenu"><a href="#{{ block.settings.menu_id }}">{{ block.settings.menu_title }}</a></li>
      {% endfor %}
    </ul>
    <img src="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/decoration_sp_2.png?v=1697613369" class="ssPopupHeader__spMenuBottomImage">
  </div>
</header>





