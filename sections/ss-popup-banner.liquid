{% if section.settings.popup-page-top-block %}
  {% assign mobile_top_padding_value =  44 %}
  {% assign pc_top_padding_value = 15 %}
{% else %}
  {% assign mobile_top_padding_value = 0  %}
  {% assign pc_top_padding_value = 0 %}
{% endif %}


{%- style -%}
.ssPopupPageShop{
  padding:0;
  margin:0;
  display: block;
  width: 100%;
}
.ssPopupPageShop__link{
  text-decoration: none;
  display: inline-block;
  width: 100%;
}
 .ssPopupPageShop__messageInner{
  padding:0;
  margin:0;
  padding: 96px 15px {{ section.settings.padding_bottom |  times: 0.5 }}px 15px;
  width: 100%;
  display: -webkit-box;
  display: -ms-flexbox;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  gap:16px;
 }

.ssPopupPageShop__section{
  padding:0;
  margin:0;
  padding-top: {{ mobile_top_padding_value }}px;
}



.ssPopupPageShop__imagebox{
  padding:0;
  margin:0;
  position: relative;
  display: block;
}

.ssPopupPageShop__imagebox::before{
  content: '';
  width: 100%;
  height: auto;
  display: block;
  padding-top:89.3333%;
}

.ssPopupPageShop__image{
  width: 100%;
  height: 100%;
  display: block;
  position: absolute;
  -o-object-fit: cover;
     object-fit: cover;
  top:0;
  left:0;
 }

 .ssPopupPageShop__deco1{
  width: 65.6vw;
  position: absolute;
  display: block;
  top:-1px;
  left:0;
 }

 .ssPopupPageShop__deco2{
  display: block;
  height: auto;
  width: 55.4666vw;
  position: absolute;
  bottom:-1px;
  right:0;
 }

 .ssPopupPageShop__message{
  padding:0;
  margin:0;
  background: {{ section.settings.background-color }};
  position:relative;
  display: block;
 }

 .ssPopupPageShop__title{
  padding:0;
  margin:0;
  position: absolute;
  top:0;
  left: 0;
  margin-left:15px;
  display: block;
  -webkit-writing-mode: vertical-rl;
      -ms-writing-mode: tb-rl;
          writing-mode: vertical-rl;
  -webkit-transform: translateY(-50%);
      -ms-transform: translateY(-50%);
          transform: translateY(-50%);
  white-space: nowrap;
 }

 .ssPopupPageShop__messageDecoSub-sp{
    padding:0;
    margin:0;
    color: #6B5D58;
    font-size: 17px;
    font-style: normal;
    font-weight: 400;
    line-height: 120%; /* 20.4px */
    position: relative;
    display: block;
 }

 .ssPopupPageShop__messageDecoSub-sp::before{
    content: attr(data-title);
    overflow: hidden;
    height: 50%;
    color: #FEFFFF;
    width: 100%;
    position: absolute;
    top:0;
    left:0;
    display: block;
 }

 .ssPopupPageShop__messageDecoSub-pc{
  padding:0;
  margin:0;
  display: none;
 }

 .ssPopupPageShop__messageDecoSub-pc::before{
    content: attr(data-title);
    overflow: hidden;
    height: 50%;
    color: #FEFFFF;
    position: absolute;
    top:0;
    left:0;
    display: block;
 }

 .ssPopupPageShop__messageDecoTitle-sp{
  padding:0;
  margin:0;
  color: #6B5D58;
  font-size: 30px;
  font-style: normal;
  font-weight: 400;
  line-height: 120%; /* 36px */
  margin-right: 16px;
  position: relative;
  display: block;
 }

 .ssPopupPageShop__messageDecoTitle-sp::before{
   content: attr(data-title);
   overflow: hidden;
   height: 50%;
    color: #FEFFFF;
   position: absolute;
    top:0;
    left:0;
    display: block;
 }

 .ssPopupPageShop__messageDecoTitle-pc{
  padding:0;
  margin:0;
  display: none;
 }

 .ssPopupPageShop__messageDecoTitle-pc::before{
    content: attr(data-title);
    overflow: hidden;
    height: 50%;
    color: #FEFFFF;
    position: absolute;
    top:0;
    left:0;
    display: block;
 }


 .ssPopupPageShop__messageNumber{
  padding:0;
  margin:0;
  display: inline-block;
  color: #020202;
  font-size: 18px;
  font-weight: 400;
  line-height: 116%; /* 20.88px */
 }
 .ssPopupPageShop__lists{
  padding:0;
  margin:0;
  list-style: none;
 }
 .ssPopupPageShop__list{
  padding:0;
  margin:0;
  display: flex;
  gap: 16px;
 }
 .ssPopupPageShop__list:not(:first-child){
  margin-top: 28px;
 }
 .ssPopupPageShop__messageText{
  flex: 1;
 }
 .ssPopupPageShop__messageText p{
  padding:0;
  margin:0;
  color:  #020202;
  font-size: 16px;
  font-weight: 400;
  line-height: 172%; /* 27.52px */
  letter-spacing: 0.64px;
 }

 @media screen and (min-width: 750px) {
  .ssPopupPageShop__title{
    margin-left: 90px;
  }

  .ssPopupPageShop__messageDecoSub-sp{
    display: none;
  }

  .ssPopupPageShop__messageDecoTitle-sp{
    display: none;
  }

  .ssPopupPageShop__messageDecoSub-pc{
    display: block;
    color: #6B5D58;
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 120%; /* 21.6px */
    position: relative;
  }

  .ssPopupPageShop__messageDecoTitle-pc{
    display: block;
    color: #6B5D58;
    font-size: 40px;
    font-style: normal;
    font-weight: 400;
    line-height: 120%; /* 48px */
    position: relative;
  }

  .ssPopupPageShop__imagebox::before{
    padding-top:46.5625%;
  }
  
  .ssPopupPageShop__lists{
    width: calc(100% - 19.0625vw);
  }

  .ssPopupPageShop__deco1{
    width: 46.171875vw;
  }

  .ssPopupPageShop__deco2{
    width: 35.546875vw;
  }

  .ssPopupPageShop__list{
    gap: 24px;
    width:100%;
  }

  .ssPopupPageShop__messageInner{
    padding-left: 19.0625vw;
    padding-top: {{ section.settings.padding_bottom }}px;
  }
  .ssPopupPageShop__messageText{
    width:100%;
  }

  .ssPopupPageShop__list:not(:first-child){
      margin-top: 40px;
  }

 }

{%- endstyle -%}



<section class="ssPopupPageShop" id="popup-banner">
  <a href="{{ section.settings.link }}" class="ssPopupPageShop__link">
    <div class="ssPopupPageShop__section">
      <div class="ssPopupPageShop__imagebox">
        <picture>
          <source class="ssPopupPageShop__image" srcset="{{ section.settings.image-pc | image_url: width: 1500  }}" alt="{{ section.settings.image-pc.alt }}" media="(min-width: 700px)">
          <img class="ssPopupPageShop__image" src="{{ section.settings.image-sp | image_url: width: 800  }}" alt="{{ section.settings.image-sp.alt }}">
        </picture>

        <picture>
          <source class="ssPopupPageShop__deco1" srcset="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/deco_pc.svg?v=1699244240" media="(min-width: 700px)" alt="装飾画像">
          <img class="ssPopupPageShop__deco1" src="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/deco_pc.svg?v=1699244240" alt="装飾画像">
        </picture>

        <img class="ssPopupPageShop__deco2" src="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/deco2_1.svg?v=1699274154" alt="装飾画像">

      </div>
      <div class="ssPopupPageShop__message">
        <div class="ssPopupPageShop__title">
          <span class="ssPopupPageShop__messageDecoSub-sp" data-title="お ん ら い ん">お ん ら い ん</span>
          <span class="ssPopupPageShop__messageDecoSub-pc" data-title="お ん ら い ん">お ん ら い ん</span>
          <h2 class="ssPopupPageShop__messageDecoTitle-sp" data-title="和 菓 子 屋">和 菓 子 屋</h2>
          <h2 class="ssPopupPageShop__messageDecoTitle-pc" data-title="和 菓 子 屋">和 菓 子 屋</h2>
        </div>

        <div class="ssPopupPageShop__messageInner">
          <ul class="ssPopupPageShop__lists">
            {% for block in section.blocks %}
              <li class="ssPopupPageShop__list">

                  <span class="ssPopupPageShop__messageNumber">{{ forloop.index | replace: '1' ,'一' | replace: '2' ,'二' | replace: '3' ,'三' | replace: '4' ,'四' | replace: '5' ,'五' }}</span>
                  <div class="ssPopupPageShop__messageText">
                    {{ block.settings.description }}
                  </div>

              </li>
            {% endfor %}


          </ul>

        </div>
      </div>
    </div>
  </a>
</section>





{% schema %}
{
  "name": "ssポップアップ_バナーリンク",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "背景色",
      "default": "#FEFFFF"
    },
    {
      "type": "checkbox",
      "id": "popup-page-top-block",
      "default": false,
      "label": "ポップアップページの最上部の場合はチェック(余白調整)"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 80
    },
    {
        "type": "image_picker",
        "id": "image-pc",
        "label": "バナー(PC用)"
    },
    {
        "type": "image_picker",
        "id": "image-sp",
        "label": "バナー(スマートフォン用)"
    },
            {
                "id": "link",
                "type": "url",
                "label": "リンク"
           }
  ],
  "presets": [
        {
          "name": "ssポップアップ_バナーリンク"
        }
  ],
  "blocks": [
        {
         "type": "blockset",
         "limit": 5,
         "name": "ブロックセット",
           "settings": [
            {
              "type": "richtext",
              "id": "description",
              "label": "テキスト",
              "default": "<p>文章を入力してください</p>"
            }
         ]
       }
     ]
}
{% endschema %}
