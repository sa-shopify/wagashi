{% if section.settings.popup-page-top-block %}
  {% assign mobile_top_padding_value = section.settings.padding-top | plus : 44 %}
  {% assign pc_top_padding_value = section.settings.padding-top | plus : 95 %}
{% else %}
  {% assign mobile_top_padding_value = section.settings.padding-top | divided_by : 2  %}
  {% assign pc_top_padding_value = section.settings.padding-top %}
{% endif %}

{%- style -%}
.popTop__section{
  padding-top: {{ mobile_top_padding_value }}px;
  padding-bottom: {{ section.settings.padding-bottom |  times: 0.5 }}px;
}

.popTop{
  background-color: {{ section.settings.background-color }};
}

.popTop__title{
  padding: 0;
  margin: 0 auto;
  width: 100%;
  max-width: 850px;
  box-sizing: border-box;
  padding-left: 32px;
  padding-right: 32px;
  text-align: center;
}

.popTop__title h2{
  padding: 0;
  margin: 0;
  font-size: 30px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
  color: #FEFFFF;
}

.popBg__image__paragraph {
  margin-top: 20px;
  text-align: center;
}

.popBg__image__paragraph p{
  padding: 0;
  margin: 0;
  font-size: 15px;
  font-style: normal;
  font-weight: 400;
  line-height: 172%;
  letter-spacing: 0.6px;
  color: #FEFFFF;
}

.popBg{
  position: relative;
  display: block;
}

.popBg__image{
  display: block !important;
  width: 100%;
}


.popBg__image::before{
  display: block;
  content: "";
  padding-top: 100%;
}

.popBg__image::after{
  position: fixed;
  top: 0;
  left: 0;
  z-index: -1;
  display: block;
  content: "";
  background-image: url('{{ section.settings.image-sp | image_url: width: 750 }}');
  background-position: 60%, 50%;
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  height: 100vh;
}

.popBg__icon1{
  width: 65.6vw;
  position: absolute;
  top: -1px;
  left: 0;
}

.popBg__icon2{
  width: 55.466vw;
  position: absolute;
  bottom: -1px;
  right: 0;
}



@media screen and (min-width: 750px) {
  .popTop__section {
    padding-top: {{ pc_top_padding_value }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    padding-right: 40px;
    padding-left: 40px;
  }
  .popTop__title h2{
    font-size: 40px;
  }
  .popBg__image::before{
    padding-top: 50%;
  }
  .popBg__image::after{
    background-image: url('{{ section.settings.image-pc | image_url: width: 2000 }}');
  }

 

  .popBg__image__paragraph p{
    font-size: 16px;
    letter-spacing: 0.64px;
  }
  .popBg__icon1{
    width: 46.171vw;
  }

  .popBg__icon2{
    width: 35.546vw;
  }




}

{%- endstyle -%}

<section class="popTop popTop__section" id="popup-introduction">

    <div class="popTop__title">
      <h2>{{ section.settings.title }}</h2>
      <div class="popBg__image__paragraph">
        {{ section.settings.description }}
      </div>
    </div>
    

</section>
<div class="popBg">
  <div class="popBg__image"></div>
  <picture>
      <source class="popBg__icon1" srcset="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/decoration_1.png?v=1697613370" alt="装飾画像" media="(min-width: 750px)">
      <img class="popBg__icon1" src="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/decoration_sp_1.png?v=1697613370" alt="装飾画像">
    </picture>
    <picture>
      <source class="popBg__icon2" srcset="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/decoration_2.png?v=1697613370" alt="装飾画像" media="(min-width: 750px)">
      <img class="popBg__icon2" src="https://cdn.shopify.com/s/files/1/0841/4478/3666/files/decoration_sp_2.png?v=1697613369" alt="装飾画像">
    </picture>
</div>


{% schema %}
    {
      "name": "ssPopup2タイトル",
      "settings": [
        {
          "type": "checkbox",
          "id": "popup-page-top-block",
          "default": true,
          "label": "ポップアップページの最上部の場合はチェック(余白調整)"
        },
        {
              "type": "text",
              "id": "title",
              "label": "タイトル",
              "default": "タイトルを入力してください"
            },
            {
              "type": "richtext",
              "id": "description",
              "label": "テキスト",
              "default": "<p>文章を入力してください</p>"
            },
            {
            "type": "color",
            "id": "background-color",
            "label": "背景色",
            "default": "#779547"
          },
        {
          "type": "range",
          "id": "padding-top",
          "min": 0,
          "max": 200,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 80
        },
        {
          "type": "range",
          "id": "padding-bottom",
          "min": 0,
          "max": 200,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 80
        },
        {
            "type": "image_picker",
            "id": "image-pc",
            "label": "バナー(パソコン用)"
        },
        {
            "type": "image_picker",
            "id": "image-sp",
            "label": "バナー(スマートフォン用)"
        }
      ],
     "presets": [
        {
          "name": "ssPopup2タイトル"
        }
      ]
    }
  {% endschema %}