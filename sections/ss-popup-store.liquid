  .ssPopupIntroduction__title{
    padding: 0;
    margin: 0;
    color: #FEFFFF;
    text-align: center;
    font-size: 29px;
    font-style: normal;
    font-weight: 400;
    margin-bottom: 20px;
    line-height: normal;
  }

  .ssPopupIntroduction__description p{
