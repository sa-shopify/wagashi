    padding: 0;
    margin: 0;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
        -ms-flex-direction: column;
            flex-direction: column;
    -webkit-box-align: start;
        -ms-flex-align: start;
            align-items: flex-start;
    margin: 0 auto;
    margin-left:24px;

  }

  .ssFooter__infomations{
    padding: 0;
    margin: 0;
    padding: 0px 0px 24px 0px;
  }

  .ssFooter__logo{
    padding: 0;
    margin: 0;
    width: 103px;
  }

  .ssFooter__logo img{
    padding: 0;
    margin: 0;
    display: block;
    margin-bottom: 20px;
    width: 100%;
    height: auto;
  }

  .ssFooter__sns{
