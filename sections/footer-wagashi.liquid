    padding-top: 10px;
    padding-bottom: 10px;
  }

  .ssFooter__right{
    display: contents;
  }
  .ssFooter__left{
    display: contents;
  }

  .ssFooter__infomations{
    order: 1;
    padding-left: 20px;
  }

  .ssFooter__mailmagazin{
    -webkit-box-ordinal-group: 4;
        -ms-flex-order: 3;
            order: 3;
  }

  .ssFooter__menus{
    list-style: none;
    padding: 0;
    margin: 0;
    padding-left: 20px;
    margin-bottom: 30px;
    -webkit-box-ordinal-group: 3;
        -ms-flex-order: 2;
            order: 2;
  }

  .ssFooter__mailmagazin h3{
    margin: 0;
    padding: 0;
    margin-bottom: 20px;
    color: #020202;
    font-size: 16px;
    font-weight: 400;
    line-height: 116%;
  }

  .ssFooter__mailinput{
    background: #F0F1ED;
  }

  .ssFooter__field:after{
    -webkit-box-shadow: 0 0 0 1px #7D7D7D;
            box-shadow: 0 0 0 1px #7D7D7D;
  }

  @media screen and (min-width: 750px) {

      .ssFooter {
          padding-top: {{ section.settings.padding-top }}px;
          padding-bottom: {{ section.settings.padding-bottom }}px;
        }

