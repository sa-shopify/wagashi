            align-items: flex-start;
  }

  .ssFooter__sns li a{
    padding: 0;
    margin: 0;
    padding: 13px;
  }

  .ssFooter__sns li a:first-child{
    padding-left: 0;
  }

  .footer__list-social{
    -webkit-box-pack: start !important;
        -ms-flex-pack: start !important;
            justify-content: flex-start !important;
  }

  .ssFooter__menu{
    padding: 0;
    margin: 0;
    color: #020202;
    font-size: 14px;
    font-weight: 400;
