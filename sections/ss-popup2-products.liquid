{%- style -%}

.imgText__section{
  padding-top: {{ section.settings.padding-top |  times: 0.5 }}px;
  padding-bottom: {{ section.settings.padding-bottom |  times: 0.5 }}px;
}

.imgText{
  background-color: {{ section.settings.background-color }};
}

.imgText__inner{
  display: flex;
  align-items:center;
  flex-direction: column;
}

.imgTxt__image{
  display: block;
  max-width: 359px;
  width: 100%;
  position: relative;
}

.imgTxt__image::after{
  content: '';
  padding-top: 100%;
  display: block;
}

.imgTxt__image img{
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 40px;
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%);
}

.imgTxt__text{
  flex: 1;
  margin: 0;
  padding: 0;
  padding-top: 70px;
  padding-right: 25px;
  padding-left: 25px;
}

.imgTxt__text dt,
.imgTxt__text dd{
  margin: 0;
  padding: 0;
}

.imgTxt__text dt {
  color: #020202;
  font-size: 30px;
  font-style: normal;
  font-weight: 400;
  line-height: normal;
}

.imgTxt__text dd {
  margin-top: 20px;
  color: #020202;
  font-size: 15px;
  font-style: normal;
  font-weight: 400;
  line-height: 172%; /* 25.8px */
  letter-spacing: 0.6px;
}

.imgTxt__text p{
  margin: 0;
  padding: 0;
}

.imgTxt__text p:not(:first-child) {
  margin-top: 10px;
}






@media screen and (min-width: 750px) {
  .imgText__section {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    padding-right: 40px;
    padding-left: 40px;
  }
  
  .imgText__inner{
    flex-direction: row;
  }

  .imgTxt__image{
    width: min(28.046vw, 359px);
  }
  .imgTxt__text dt {
    font-size: 40px;
  }
  .imgTxt__text dd {
    font-size: 16px;
    line-height: 172%; /* 27.52px */
    letter-spacing: 0.64px;
  }

  .imgTxt__text{
  padding-top: min(4.6875vw, 60px);
  padding-right: min(5.45875vw, 70px);
  padding-left: min(5.45875vw, 70px);
  padding-bottom: min(5.45875vw, 70px);
}



}

{%- endstyle -%}

<section class="imgText imgText__section">
  <div class="section-inner imgText__inner">
    <div class="imgTxt__image">
      <img src="{{ block.settings.image | image_url: width: 800  }}" alt="{{ block.settings.image.alt }}">
    </div>
    <dl class="imgTxt__text">
      <dt>{{ block.settings.title }}</dt>
      <dd>{{ block.settings.description }}</dd>
    </dl>

  </div>
</section>



{% schema %}
    {
      "name": "ssPopup2商品紹介",
      "settings": [
        {
              "type": "text",
              "id": "title",
              "label": "タイトル",
              "default": "タイトルを入力してください"
            },
            {
              "type": "richtext",
              "id": "description",
              "label": "テキスト",
              "default": "<p>文章を入力してください</p>"
            },
            {
            "type": "color",
            "id": "background-color",
            "label": "背景色",
            "default": "#FEFFFF"
          },
        {
          "type": "range",
          "id": "padding_top",
          "min": 0,
          "max": 200,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_top",
          "default": 160
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "min": 0,
          "max": 100,
          "step": 4,
          "unit": "px",
          "label": "t:sections.all.padding.padding_bottom",
          "default": 80
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "画像"
        }
      ],
     "presets": [
        {
          "name": "ssPopup2商品紹介"
        }
      ]
    }
  {% endschema %}